<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Agregar cliente</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form id="form_clientes">
    <div class="modal-body">
      <input type="hidden" name="id_cliente" value="<%=(typeof id_cliente != undefined ? id_cliente : '')%>">
      <input type="hidden" name="id_cotizacion" value="<%=(typeof id_cotizacion != undefined ? id_cotizacion : '')%>">
        <div class="mb-3">
            <label for="nombre_cliente" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="nombre_cliente" name="nombre_cliente" required value="<%=(typeof nombre_cliente != undefined ? nombre_cliente : '')%>">
          </div>
        <div class="mb-3">
            <label for="nombre_empresa" class="form-label">Nombre empresa</label>
            <input type="text" class="form-control" id="nombre_empresa" name="nombre_empresa" required value="<%=(typeof nombre_empresa != undefined ? nombre_empresa : '')%>">
          </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required value="<%=(typeof email != undefined ? email : '')%>">
          </div>
        <div class="mb-3">
            <label for="tel" class="form-label">Teléfono</label>
            <input type="number" class="form-control" id="tel" name="tel" required value="<%=(typeof tel != undefined ? tel : '')%>">
          </div>
        <div class="mb-3">
            <label for="direccion" class="form-label">Dirección</label>
            <textarea type="text" class="form-control" id="direccion" name="direccion" rows="3" required><%=(typeof direccion != undefined ? direccion : '')%></textarea>
          </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>
    </div>
</form>