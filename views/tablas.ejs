<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Informaci√≥n</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="js/jsgantt_v12/jsgantt.css" />
</head>
<body>
<div class="container">
    <button class="btn btn-primary mt-3"><i class="fa fa-arrow-left"></i> <a style="text-decoration:none;color:white;" href="/">Regresar</a></button>
    <div class="row mt-5">
        <div class="col-6">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Precio por hora</th>
                        <th scope="col">Horas a la semana de trabajo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>$ <%=cotizado['costo_hora']%></td>
                        <td><%=cotizado['horas_trabajo_semanales']%></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
      <div class="row">
          <div class="col-6">
          <h4>Tabla de acuerdos</h4>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Acuerdos</th>
                </tr>
              </thead>
              <tbody>
                <% acuerdos.forEach(function(value, index){ %>
                       <tr>
                           <th scope="col"><%= index+1 %></th>
                           <td><%= value['acuerdo'] %></td>
                       </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
          <div class="col-6">
          <h4>Tabla de responsabilidades</h4>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Responsabilidades</th>
                  <th scope="col">Responsable</th>
                </tr>
              </thead>
              <tbody>
                <% responsabilidades.forEach(function(value, index){ %>
                       <tr>
                           <th scope="col"><%= index+1 %></th>
                           <td><%= value['responsabilidad'] %></td>
                           <td><%= value['tipo'] %></td>
                       </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>
             <div class="row mt-5">
              <% if( subcontrataciones.length != 0){ %>
                  <div class="col-6">
                  <h4>Tabla de subcontrataciones</h4>
                    <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">#</th>
                          <th scope="col">Nombre</th>
                          <th scope="col">Costo</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% subcontrataciones.forEach(function(value, index){ %>
                               <tr>
                                   <th scope="col"><%= index+1 %></th>
                                   <td><%= value['nombre'] %></td>
                                   <td>$ <%= value['costo'] %></td>
                               </tr>
                          <% }); %>
                          <%  
                            let sum = 0;
                            for (let i = 0; i < subcontrataciones.length; i++) {
                              sum += parseInt(subcontrataciones[i]['costo']);
                            }
                        %>
                           <tr>
                               <th scope="col"></th>
                               <td>Costo total</td>
                               <td>$ <%=sum%></td>
                           </tr>
                      </tbody>
                    </table>
                  </div>
              <% } %>
              <div class="col-6">
              <h4>Tabla de sub-secuencias GANTT</h4>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">Actividad</th>
                      <th scope="col">Fecha Inicio</th>
                      <th scope="col">Fecha Termina</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% gantt.forEach(function(value, index){ %>
                           <tr>
                               <th scope="col"><%= index+1 %></th>
                               <td><%= value['actividad'] %></td>
                               <td><%= value['fecha_inicio_actividad'] %></td>
                               <td><%= value['fecha_termina_actividad'] %></td>
                           </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
              </div>  
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
      <script src="js/jsgantt_v12/jsgantt.js"></script>
      <script src="https://unpkg.com/gojs/release/go-debug.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
      <script src="js/jsgantt_v12/jsgantt.js"></script>
      <script src="https://unpkg.com/gojs/release/go-debug.js"></script>
</body>
</html>

